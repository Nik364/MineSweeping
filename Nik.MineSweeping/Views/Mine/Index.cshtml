
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        .game {
        }

            .game .row {
            }

            .game .cell {
                display: inline-block;
                width: 30px;
                height: 30px;
                line-height: 30px;
                text-align: center;
                cursor: pointer;
                background-color: aquamarine;
                margin-left: 2px;
                margin-top: 2px;
            }
    </style>
</head>
<body>
    <div>
        <span id="sName"></span>
    </div>
    <div class="game">

    </div>
    <input type="button" id="btnStart" value="游戏开始" />
    <script src="~/Scripts/jquery-1.6.4.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
    <script src="~/signalr/js"></script>
    <script>
        $(function () {
            //$('#sName').text(prompt('请输入玩家名称'));


            var conn = $.connection;
            conn.hub.qs = { "name": $('#sName').text() };

            var mine = conn.mine;
            mine.client.start = function (width, height, map) {
                //console.log(width);
                //console.log(height);
                //console.table(map);

                initMap(width, height, map);
            };

            mine.client.click = function (cells) {
                console.table(cells);
                refreshMap(cells);
            };

            // 开始链接
            conn.hub.start().done(function () {
                $('#btnStart').click(function () {
                    mine.server.start(10, 10, 10).fail(function (e) { console.log(e) });
                })

                $('.game').delegate('.cell', 'click', function () {
                    var $cell = $(this);
                    console.log($cell.data('x') + '-' + $cell.data('y'));
                    mine.server
                        .click(0, {
                            x: $cell.data('x'),
                            y: $cell.data('y')
                        })
                        .fail(function (e) {
                            console.log(e);
                        });
                })

                //mine.server.hello()
                //    .done(function () {

                //    })
                //    .fail(function (e) {
                //        alert(e);
                //    });
            })
        });
    </script>
    <script>
        /***********************UI***************************/
        function initMap(width, height, map) {
            var $row;
            var $cell;
            for (var i = 0; i < map.length; i++) {
                if (i % width == 0) {
                    $row = $('<div/>').addClass('row');
                    $('.game').append($row);
                }

                $cell = $('<div/>')
                    .addClass('cell')
                    .data('x', i % width)
                    .data('y', parseInt(i / width))
                    .text(map[i].Status);
                $row.append($cell);
            }
        }

        function refreshMap(cells) {
            for (var i = 0; i < cells.length; i++) {
                $('.cell[data-x=' + cells[i].X + '][data-y=' + cells[i].Y + ']').text(cells[i].Status);
            }
        }

        $(function () {

        })
    </script>
</body>
</html>
